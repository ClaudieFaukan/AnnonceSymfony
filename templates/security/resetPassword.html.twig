{% extends 'base.html.twig' %}

{% block title %}Modifier mot de passe{% endblock %}

{% block body %}

    <h1>Modifier mot de passe</h1>

    {# {{ form(form) }} #}

    {{ form_start(form) }}

    
    {{ form_row(form.oldPassword, {'label': 'Ancien mot de passe','attr': {'placeholder':"Ancien mot de passe"}}) }}
    {{ form_row(form.password.first, {'label': 'Nouveau mot de passe','attr': {'placeholder':"Nouveau mot de passe "}}) }}
    {{ form_row(form.password.second, {'label': 'Confirmation du nouveau mot de passe','attr': {'placeholder':"Répétez votre nouveau mot de passe"}}) }}
    {# <button type="submit" class="btn btn-success">Inscription</button> #}

    {{ form_end(form) }}

{% endblock %}
